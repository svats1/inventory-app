extends layout 

block content 
    h1 #{title}
    h3 Details for #{item.name}
    p Name : #{item.name}
    p Desc : #{item.description}
    p Category : #{category.name}
    p Brand : #{item.brand} 
    p Model : #{item.model} 
    p Price : #{item.price}

    a(href=`/catalog/items/edit/${item.id}`) Edit Item
    br

    a(href="/catalog/items") Back to inventory